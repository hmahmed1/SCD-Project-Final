<script>
function validateAndPlaceOrder(event) {
    event.preventDefault();
    const form = document.getElementById("billing-form");

    // Required fields
    const requiredFields = [
        "order-type",
        "city",
        "full-name",
        "address",
        "phone",
        "email"
    ];

    // Check if all required fields are filled
    for (let i = 0; i < requiredFields.length; i++) {
        const field = document.getElementById(requiredFields[i]);
        if (!field.value || field.value.trim() === "") {
            alert("Please fill all required fields!");
            return;
        }
    }

    // Check if payment method is selected
    const paymentCash = document.getElementById("payment-cash").checked;
    const paymentCard = document.getElementById("payment-card").checked;
    if (!paymentCash && !paymentCard) {
        alert("Please select a payment method!");
        return;
    }

    // Show loading overlay
    const loadingOverlay = document.getElementById("loading");
    loadingOverlay.style.display = "flex";

    // After 2 seconds, hide loading and show success alert
    setTimeout(function() {
        loadingOverlay.style.display = "none";
        alert("Your order has been successfully delivered!");
    }, 2000);
}
</script>

