    <main class="container mt-5">
        <h2 class="text-center">Billing Details</h2>

        <div class="row">
            <div class="col-md-6">
                <form id="billing-form">
                    <div class="form-group">
                        <label for="order-type">Order Type *</label>
                        <select id="order-type" class="form-control" required>
                            <option value="">Select Order Type</option>
                            <option value="delivery">Delivery</option>
                            <option value="pickup">Pickup</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="city">Select City *</label>
                        <select id="city" class="form-control" required>
                            <option value="">--Select City--</option>
                            <option value="karachi">Karachi</option>
                            <option value="lahore">Lahore</option>
                            <option value="islamabad">Islamabad</option>
                            <option value="quetta">Quetta</option>
                            <option value="gujrat">Gujrat</option>
                            <option value="sargodha">Sargodha</option>
                        </select>
                    </div>

                    <div class="form-group">
                        <label for="full-name">Full Name *</label>
                        <input type="text" id="full-name" class="form-control" required>
                    </div>

                    <div class="form-group">
                        <label for="country">Country / Region (optional)</label>
                        <input type="text" id="country" class="form-control" value="Pakistan">
                    </div>

                    <div class="form-group">
                        <label for="address">Street Address *</label>
                        <input type="text" id="address" class="form-control" required placeholder="House number and street name">
                    </div>

                    <div class="form-group">
                        <label for="phone">Phone *</label>
                        <input type="text" id="phone" class="form-control" required>
                    </div>


                    <div class="mt-4">
                        <h4>Payment Method</h4>
                        <div class="form-check">
                            <input type="radio" id="payment-cash" class="form-check-input" name="payment" value="cash">
                            <label for="payment-cash" class="form-check-label">Cash on Delivery</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" id="payment-card" class="form-check-input" name="payment" value="card">
                            <label for="payment-card" class="form-check-label">Pay with Card</label>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <h1><button type="submit" class="btn btn-warning">Place Order</button></h1>
                    </div>
                </form>
            </div>
            
            <div class="col-md-6">
                <h3>Additional Information</h3>
                <div class="form-group">
                    <label for="email">Email address *</label>
                    <input type="email" id="email" class="form-control" required>
                </div>

                <div class="form-group">
                    <label for="order-notes">Order notes (optional)</label>
                    <textarea id="order-notes" class="form-control" rows="4"></textarea>
                </div>
